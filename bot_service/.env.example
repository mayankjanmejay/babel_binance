# Binance API Configuration
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_API_SECRET=your_binance_api_secret_here

# Appwrite Configuration
APPWRITE_ENDPOINT=http://localhost/v1
APPWRITE_PROJECT_ID=your_project_id
APPWRITE_API_KEY=your_appwrite_api_key
APPWRITE_DATABASE_ID=crypto_trading
APPWRITE_COLLECTION_WATCHLIST=watchlist
APPWRITE_COLLECTION_TRADES=trades
APPWRITE_COLLECTION_ALGORITHMS=algorithms
APPWRITE_COLLECTION_PORTFOLIOS=portfolios
APPWRITE_COLLECTION_BOT_CONFIGS=bot_configs

# Bot Configuration
BOT_USER_ID=default_user
BOT_CHECK_INTERVAL_SECONDS=30
BOT_ENABLE_TRADING=false # Set to true to enable live trading
BOT_SIMULATION_MODE=true # Set to false for live trading
BOT_MAX_POSITION_SIZE=0.1 # 10% of portfolio per trade
BOT_MAX_DAILY_LOSS=0.05 # 5% max daily loss

# Risk Management
RISK_MAX_OPEN_POSITIONS=5
RISK_STOP_LOSS_PERCENTAGE=0.02 # 2% stop loss
RISK_TAKE_PROFIT_PERCENTAGE=0.05 # 5% take profit

# Logging
LOG_LEVEL=INFO # DEBUG, INFO, WARNING, ERROR
LOG_TO_FILE=true
LOG_FILE_PATH=/var/log/trading_bot.log

# Monitoring
ENABLE_HEALTH_CHECK=true
HEALTH_CHECK_PORT=8080
